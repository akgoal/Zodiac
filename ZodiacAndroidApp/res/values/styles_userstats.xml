<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UserStatsUsernameTextView" parent="MaterialTextPrimary">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="UserStatsErrorLoadingMessageTextView" parent="MaterialTextPrimary">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="UserStatsDivider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_height">1dp</item>
    </style>
    
    <style name="UserStatsListView">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listSelector">@color/board_list_item_background</item>
    </style>
    
    <style name="UserStatsListItemTextView" parent="MaterialTextPrimary">
        <item name="android:textSize">18sp</item>
    </style>

</resources>