<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp" >

    <include layout="@layout/board_top_users_list_item" />

    <View
        style="@style/BoardTopUsersListViewHeaderDivider"
        android:layout_width="match_parent" />

    <com.deakishin.zodiac.controller.boardscreen.CustomSwipeRefreshLayout
        android:id="@+id/board_top_users_swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/board_top_users_listView"
            style="@style/BoardTopUsersListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" />
    </com.deakishin.zodiac.controller.boardscreen.CustomSwipeRefreshLayout>

</LinearLayout>