<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:paddingLeft="64dp"
        android:paddingStart="64dp" >

        <TextView
            android:id="@+id/checkpoint_title_textView"
            style="@style/DrawerCheckpointTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />

        <ImageButton
            android:id="@+id/checkpoint_delete_button"
            style="@style/DrawerDeleteCheckpointImageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/delete_checkpoint"
            android:focusable="false"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="50dp"
            android:paddingBottom="4dp"
            android:paddingEnd="16dp"
            android:paddingLeft="2dp"
            android:paddingRight="16dp"
            android:paddingStart="2dp"
            android:paddingTop="4dp" />
    </RelativeLayout>

</LinearLayout>