<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp" >

    <TextView
        android:id="@+id/dialog_cipher_info_title_textView"
        style="@style/CipherInfoTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/dialog_cipher_info_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_cipher_info_created_by_textView"
                style="@style/CipherInfoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cipher_info_created_by" />

            <TextView
                android:id="@+id/dialog_cipher_info_difficulty_textView"
                style="@style/CipherInfoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/cipher_info_difficulty" />

            <TextView
                android:id="@+id/dialog_cipher_info_description_textView"
                style="@style/CipherInfoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/cipher_info_description" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>