<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cipher_creating_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/cipher_creating_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="16dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/cipher_creating_title_label_textView"
                style="@style/FormFieldLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/cipher_creating_title" />

            <EditText
                android:id="@+id/cipher_creating_title_editText"
                style="@style/FormFieldEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cipher_creating_title"
                android:inputType="textCapSentences|textMultiLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" >

                <TextView
                    android:id="@+id/cipher_creating_title_error_textView"
                    style="@style/FormFieldErrorTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sign_up_username_required"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/cipher_creating_title_counter_textView"
                    style="@style/FormFieldCounterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_counter_limit" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/cipher_creating_description_label_textView"
                style="@style/FormFieldLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/cipher_creating_description" />

            <EditText
                android:id="@+id/cipher_creating_description_editText"
                style="@style/FormFieldEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cipher_creating_description"
                android:inputType="textCapSentences|textMultiLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" >

                <TextView
                    android:id="@+id/cipher_creating_description_error_textView"
                    style="@style/FormFieldErrorTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sign_up_username_required"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/cipher_creating_description_counter_textView"
                    style="@style/FormFieldCounterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_counter_limit" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/cipher_creating_plaintext_label_textView"
                style="@style/FormFieldLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/cipher_creating_plaintext" />

            <EditText
                android:id="@+id/cipher_creating_plaintext_editText"
                style="@style/FormFieldEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cipher_creating_plaintext_hint"
                android:inputType="textMultiLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/cipher_creating_plaintext_error_len_textView"
                        style="@style/FormFieldErrorTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cipher_creating_plaintext_requirements_length" />

                    <TextView
                        android:id="@+id/cipher_creating_plaintext_error_lang_textView"
                        style="@style/FormFieldErrorTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cipher_creating_plaintext_considered_characters" />
                </LinearLayout>

                <TextView
                    android:id="@+id/cipher_creating_plaintext_counter_textView"
                    style="@style/FormFieldCounterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_counter_limit" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cipher_creating_generate_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                android:paddingLeft="0dp"
                android:paddingRight="8dp"
                android:paddingStart="0dp" >

                <CheckBox
                    android:id="@+id/cipher_creating_homophonic_checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cipher_creating_homophonic" />

                <ImageButton
                    android:id="@+id/cipher_creating_params_help_imageButton"
                    style="@style/CipherCreatingParamsHelpImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/cipher_creating_help_descr" />
            </LinearLayout>

            <Button
                android:id="@+id/cipher_creating_generate_button"
                style="@style/CipherCreatingGenerateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/cipher_creating_generate" />
        </LinearLayout>

        <TextView
            android:id="@+id/cipher_creating_generated_error_textView"
            style="@style/FormFieldErrorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/cipher_creating_generated_required" />

        <LinearLayout
            android:id="@+id/cipher_creating_preview_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cipher_creating_preview_error_border"
            android:orientation="vertical"
            android:padding="3dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/cipher_creating_difficulty_textView"
                        style="@style/CipherCreatingDifficultyTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cipher_creating_difficulty" />

                    <ImageButton
                        android:id="@+id/cipher_creating_difficulty_help_imageButton"
                        style="@style/CipherCreatingParamsHelpImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/button_search_help" />
                </LinearLayout>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/cipher_creating_solution_switch"
                    style="@style/CipherCreatingSolutionSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/cipher_creating_solution" />
            </LinearLayout>

            <com.deakishin.zodiac.controller.boardscreen.CipherPreviewView
                android:id="@+id/cipher_creating_previewView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>